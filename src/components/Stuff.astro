---
import shapeList from "../assets/data/shapeList";
import ShapeItem from "../components/ShapeItem.astro";
---

<section class="py-16 px-5 ">
  <h2 class="font-heading text-center font-bold">Thine Stuff</h2>
  <p class="text-center">
    Along the years i've acclimated opinions about the things i hear, read, see
  </p>
  <div class="relative mx-auto mt-6 h-64  w-72  border-black ">
    {
      shapeList.map(
        ({ title, position, bgPath, txtPosition, shape, color }) => (
          <ShapeItem
            title={title}
            bgPath={bgPath}
            position={position}
            txtPosition={txtPosition}
            shape={shape}
            color={color}
          />
        ),
      )
    }
  </div>
</section>

<style>
  .svgBg {
    background: url("../icons/stuff/music.svg") space;
    background-color: gray;
    clip-path: polygon(0 0, 0% 100%, 100% 100%);
  }
</style>
