---
import { Icon } from "astro-icon/components";

const navList = [
  { route: "/", name: "home" },
  { route: "/books", name: "books" },
  { route: "/television", name: "television" },
  { route: "/education", name: "education" },
  { route: "/music", name: "music" },
];

const currentPath = new URL(Astro.request.url).pathname;
---

<header class="bg-gray-800 sticky top-0">
  <nav>
    <ul class="flex gap-2 justify-around px-5 py-3">
      {
        navList.map(({ name, route }) => (
          <li class="px-2 py-1 rounded-md">
            <a href={route}>
              <Icon
                name={"nav/" + name}
                class={`text-3xl text-white ${currentPath === route ? "text-yellow-400" : ""}`}
              />
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>
